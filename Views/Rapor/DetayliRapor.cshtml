@model IEnumerable<Gelir_Gider_Yonetim_Sistemi.Models.KayitGelirGider>


@{
    ViewBag.Title = "DetayliRapor";
}
<link href="~/Content/Site.css" rel="stylesheet" />
<script src="~/Scripts/chart.js"></script>
<script src="~/Scripts/chart.min.js"></script>
<div class="d-flex justify-content-between align-items-center mt-4 mb-4">
    <h2>Gelir Gider Raporu Detaylı</h2>
    <a href="@Url.Action("KayitListele", "Kayit", new { area = "" })" class="btn btn-kayit px-3">
        <i class="fa-solid fa-arrow-left"></i>
    </a>
</div>
<div class="container">
    <div class="row">
        <div class="col d-flex justify-content-end m-0" style="font-size:18px">
            <div>
                <p>Tarih Aralığı : @ViewBag.baslangicTarih - @ViewBag.bitisTarih</p>
            </div>
        </div>
    </div>
</div>
@if (ViewBag.NoDataMessage != null)
{
    <div class="alert alert-warning">
        @ViewBag.NoDataMessage
    </div>
}

@if (Model != null && Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr class="table-header">
                <th>Kayıt Türü</th>
                <th>Kayıt Tarihi</th>
                <th>Açıklama</th>
                <th>Tutar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.KayitTur</td>
                    <td>@item.KayitTarih.ToString("dd.MM.yyyy")</td>
                    <td>@item.KayitAciklama</td>
                    <td>@item.Tutar</td>
                </tr>
            }
        </tbody>
    </table>
    <div class="container">
        <div class="row">
            <div class="col d-flex justify-content-end">
                <div class="sonuc">
                    @if (ViewBag.kayitTuru == "Gelir")
                    {
                        <p>Toplam Gelir: @ViewBag.GelirTutarlariToplami</p>
                    }
                    else if (ViewBag.kayitTuru == "Gider")
                    {
                        <p>Toplam Gider: @ViewBag.GiderTutarlariToplami</p>
                    }
                </div>
            </div>
        </div>
    </div>

}
<style>
    .table-header {
        background: #26344a;
        color: white;
    }

    .sonuc {
        background: #26344a;
        color: white;
        padding: 10px;
        font-weight: bold;
        font-size: 19px;
        padding-top: 20px;
        border-radius: 5px;
    }
</style>
